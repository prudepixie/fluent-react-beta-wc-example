{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "target": "es2017",
    "module": "ESNext",
    "allowJs": true,
    "importHelpers": true,
    "types": ["node"],
    "lib": ["DOM", "ES2017", "ES2016.Array.Include"],
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
